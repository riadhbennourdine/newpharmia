{
  "name": "pharmia",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node dist-server/server.js",
    "dev": "npm run build:server && concurrently \"vite\" \"tsc --watch -p tsconfig.server.json\" \"nodemon --watch dist-server --exec 'node -r dotenv/config' dist-server/server.js\"",
    "build": "npm run build:server && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "db:add-memo-sections": "tsx scripts/add-memo-sections.ts",
    "db:ensure-memo-sections": "tsx scripts/ensure-memo-sections.ts",
    "index:algolia": "tsx --require dotenv/config scripts/index-memofiches-to-algolia.ts",
    "preview": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start:backend": "node -r dotenv/config dist-server/server.js"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@types/react-select": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "algoliasearch": "^4.25.3",
    "axios": "^1.12.2",
    "basic-ftp": "^5.0.5",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.562.0",
    "mongodb": "^6.21.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "path-browserify": "^1.0.1",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.2.0",
    "chart.js": "^4.4.3",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-pdf": "^10.2.0",
    "react-resize-detector": "^12.3.0",
    "react-router-dom": "^7.9.3",
    "react-select": "^5.10.2",
    "url": "^0.11.4",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/node": "^22.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/react-dropzone": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.53.1"
  }
}
